{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "react"
    ],
    "rules": {
        /* indentation : 4 spaces. */
        "indent": ["error", 4],

        /* disable check of semicolons at the end of line; 
           standardx wont work with value 1 or 2,
           and wont add ';' automatically when "semi" value is 0. */
        "semi": 0,

        /* allow multiple empty lines */
        "no-multiple-empty-lines": 0,

        /* No multi spaces in one row before comments - Ignore comments. Wanr about code. */
        "no-multi-spaces": ["warn", { "ignoreEOLComments": true }],

        /* Ingore 'Require the use of === and !==' */
        "eqeqeq": 0,
        
        /* force CamelCase in names - disabled. (wont work properly) */
        "camelcase": ["off"]
    }
}
